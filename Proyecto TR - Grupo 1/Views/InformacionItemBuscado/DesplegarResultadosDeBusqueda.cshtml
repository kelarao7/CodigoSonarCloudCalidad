@using PagedList;

@{
    ViewBag.Title = "Informacion de Items Encontrados";
}
<head>
    <meta charset="utf-8">
    <title>Trueques &#64 UCR</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/General.css">
    <link rel="stylesheet" href="~/Content/DisplayBusqueda.css">
    <script src="~/Scripts/filtrarTrueque.js"></script>
    <script src="~/Scripts/ManejoResultadoBusqueda/Filtros.js"></script>
    <script src="~/Scripts/ManejoResultadoBusqueda/Ordenamiento.js"></script>
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <nav aria-label="breadcrumb" id="breadcrumb-1">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">
                    <img src="~/Content/Images/home.png" width="25" height="25" />
                </a>
            </li>
            <li class="breadcrumb-item" id="migasDePan">Resultado de búsqueda</</li>
        </ol>
    </nav>
    <div class="row" id="fila-principal">

        @Html.Partial("Filtros")

        <div class="container primary-holder">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h2 id="resultado">Resultados de búsqueda</h2>
                    </div>
                </div>
            </div>


            @Html.Partial("OrdenamientoPaginacion")

            <div class="container">
                <div class="grid">
                    <div class="row col-lg-6 offset-6 float-md-center">
                        <div class="row align-bottom">
                            @Html.PagedListPager((IPagedList)ViewBag.resultadoBusQuedaPaginado, page => Url.Action("DesplegarResultadosDeBusqueda", "InformacionItemBuscado", new { criterioBusqueda = (String)TempData.Peek("criterioBusqueda"), numeroPagina = page, itemsPorPagina = (int?)TempData.Peek("itemsPorPagina"), nuevaBusqueda = (bool?)false }))
                        </div>
                    </div>
                </div>
            </div>

            @Html.Partial("DesplegarItems")
        </div>
    </div>

    <div class="container">
        <div class="grid">
            <div class="row col-lg-6 offset-7 float-md-center">
                <div class="row align-bottom">
                    @Html.PagedListPager((IPagedList)ViewBag.resultadoBusQuedaPaginado, page => Url.Action("DesplegarResultadosDeBusqueda", "InformacionItemBuscado", new { criterioBusqueda = (String)TempData.Peek("criterioBusqueda"), numeroPagina = page, itemsPorPagina = (int?)TempData.Peek("itemsPorPagina"), nuevaBusqueda = (bool?)false }))
                </div>
            </div>
        </div>
    </div>
    
        @Html.Partial("RecomendacionesPorBusqueda")
  


</body>

